<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/showPwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/edt_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txt_authorid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp" />
            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/radioText"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="文本密码"/>
                <RadioButton
                    android:layout_marginLeft="40dp"
                    android:id="@+id/radioNumber"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="数字密码"/>
                <RadioButton
                    android:layout_marginLeft="40dp"
                    android:id="@+id/radioFree"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="自由说"/>
            </RadioGroup>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <Button
                android:text="获取密码"
                android:id="@+id/isv_getpassword"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
                <Button
                    android:text="查询模型"
                    android:id="@+id/isv_search"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <Button
                    android:text="删除模型"
                    android:id="@+id/isv_delete"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <Button
                    android:text="注册"
                    android:id="@+id/isv_register"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <Button
                    android:text="验证"
                    android:id="@+id/isv_verify"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <Button
                    android:text="停止录音"
                    android:id="@+id/isv_stop_record"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <Button
                android:text="取消"
                android:layout_gravity="center"
                android:id="@+id/isv_cancel"
                android:layout_width="200dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/showMsg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/showRegFbk"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/recordTime"/>
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>