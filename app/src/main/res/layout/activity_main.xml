<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="8">
        <RelativeLayout android:id="@+id/interview_setting"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
            android:layout_marginTop="5dp"
        android:gravity="center"
        android:background="@drawable/select_bg">
        <TextView
            android:id="@+id/tv_itv_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="访谈设置"
            android:textSize="20sp"/>
    </RelativeLayout>
        <RelativeLayout
            android:id="@+id/interview_collect"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:background="@drawable/select_bg">
            <TextView
                android:id="@+id/tv_itv_collect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="访谈采录"
                android:textSize="20sp"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/contrast"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:background="@drawable/select_bg">
            <TextView
                android:id="@+id/tv_contrast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="文稿校对"
                android:textSize="20sp"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/query"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:background="@drawable/select_bg">
            <TextView
                android:id="@+id/tv_query"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="访谈查询"
                android:textSize="20sp"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/print"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:background="@drawable/select_bg">
        <TextView
            android:id="@+id/tv_print"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="排版打印"
            android:textSize="20sp"/>
    </RelativeLayout>
        <RelativeLayout
            android:id="@+id/management"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:background="@drawable/select_bg">
            <TextView
                android:id="@+id/tv_management"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="版面管理"
                android:textSize="20sp"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/syt_setting"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:layout_weight="2"
            android:background="@drawable/select_bg"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_syt_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="系统设置"
                android:textSize="20sp" />
        </RelativeLayout>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/frame_layout"
        android:layout_width="0dp"
        android:layout_weight="4"
        android:layout_height="match_parent"></FrameLayout>

</LinearLayout>